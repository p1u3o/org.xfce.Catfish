{
  "app-id":"org.xfce.Catfish",
  "branch":"stable",
  "runtime":"org.gnome.Platform",
  "runtime-version":"3.34",
  "sdk":"org.gnome.Sdk",
  "command":"catfish",
  "finish-args":[
    "--share=ipc",
    "--socket=x11",
    "--filesystem=home"
  ],
  "rename-icon": "catfish",
  "cleanup":[
    "/share/man",
    "/share/doc",
    "/share/gtk-doc",
    "/lib/pkgconfig",
    "/lib/debug"
  ],
  "build-options":{
    "strip":true
  },
  "modules":[
    {
      "name":"python-distutils-extra",
      "buildsystem":"simple",
      "sources":[
        {
          "type":"archive",
          "url":"https://launchpad.net/python-distutils-extra/trunk/2.39/+download/python-distutils-extra-2.39.tar.gz",
          "sha256":"723f24f4d65fc8d99b33a002fbbb3771d4cc9d664c97085bf37f3997ae8063af"
        }
      ],
      "build-commands":[
        "pip3 install --prefix=/app ."
      ]
    },
    "pip.json",
    "zeitgeist.json",
    "shared-modules/intltool/intltool-0.51.json",
    {
      "name":"catfish",
      "buildsystem":"simple",
      "sources":[
        {
          "type":"git",
          "url":"https://github.com/xfce-mirror/catfish.git",
          "tag":"catfish-1.4.11"
        }
      ],
      "build-commands":[
        "python3 setup.py install --prefix=${FLATPAK_DEST}"
      ]
    }
  ]
}

